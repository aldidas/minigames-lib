{
  "name": "@minigame/react",
  "version": "1.0.0",
  "description": "React component wrappers for minigames-lib",
  "author": "Aldi",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "@minigame/breakout": "workspace:*",
    "@minigame/core": "workspace:*",
    "@minigame/pong": "workspace:*",
    "@minigame/snake": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@vitejs/plugin-react": "^4.2.1",
    "jsdom": "^23.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vitest": "^1.0.4"
  }
}
