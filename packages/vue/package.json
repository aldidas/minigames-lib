{
  "name": "@minigame/vue",
  "version": "1.0.0",
  "description": "Vue 3 component wrappers for minigames-lib",
  "author": "Aldi",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@minigame/core": "workspace:*",
    "@minigame/snake": "workspace:*",
    "@minigame/pong": "workspace:*",
    "@minigame/breakout": "workspace:*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.3",
    "jsdom": "^23.0.1",
    "vue": "^3.4.0",
    "vitest": "^1.0.4"
  }
}
