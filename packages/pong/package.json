{
  "name": "@minigame/pong",
  "version": "1.0.0",
  "description": "Classic Pong game implementation for minigame library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": ["minigame", "pong", "game", "html5", "canvas", "arcade", "paddle"],
  "author": "Aldi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aldidas/minigames-lib.git",
    "directory": "packages/pong"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@minigame/core": "workspace:^"
  },
  "devDependencies": {
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "jsdom": "^23.0.1"
  }
}
