{
  "name": "@minigame/core",
  "version": "1.0.0",
  "description": "Core framework for minigame library - BaseGame class, event system, and types",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": ["minigame", "core", "framework", "game", "typescript", "html5", "canvas", "embeddable"],
  "author": "Aldi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aldidas/minigames-lib.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  }
}
